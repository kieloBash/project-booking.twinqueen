datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRoles {
  ADMIN
  CUSTOMER
}

model User {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  image String
  role  UserRoles @default(CUSTOMER)
  email String    @unique
}
